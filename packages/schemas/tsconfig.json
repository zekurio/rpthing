{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"skipLibCheck": true,
		"verbatimModuleSyntax": true,
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": false,
		"rootDir": "./src",
		"outDir": "./dist"
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}

