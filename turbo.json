{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": ["dist/**", ".next/**"],
			"env": [
				"PUBLIC_S3_ENDPOINT",
				"CORS_ORIGIN",
				"BETTER_AUTH_SECRET",
				"BETTER_AUTH_URL",
				"DATABASE_URL",
				"DISCORD_CLIENT_ID",
				"DISCORD_CLIENT_SECRET",
				"S3_ACCESS_KEY_ID",
				"S3_SECRET_ACCESS_KEY",
				"S3_BUCKET_NAME",
				"S3_ENDPOINT"
			]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"check-types": {
			"dependsOn": ["^check-types"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"start": {
			"dependsOn": ["build"],
			"cache": false,
			"persistent": true
		},
		"db:push": {
			"cache": false,
			"persistent": true
		},
		"db:studio": {
			"cache": false,
			"persistent": true
		},
		"db:migrate": {
			"cache": false,
			"persistent": true
		},
		"db:generate": {
			"cache": false,
			"persistent": true
		}
	}
}
