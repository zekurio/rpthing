{
	"name": "server",
	"main": "src/index.ts",
	"type": "module",
	"scripts": {
		"build": "tsdown",
		"check-types": "tsc -b",
		"compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
		"dev": "bun run --hot src/index.ts",
		"start": "bun run dist/index.js",
		"start:dev": "bun run --hot src/index.ts",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate"
	},
	"dependencies": {
		"@hono/trpc-server": "^0.4.0",
		"@trpc/client": "^11.5.0",
		"@trpc/server": "^11.5.0",
		"better-auth": "^1.3.7",
		"dotenv": "^17.2.1",
		"drizzle-orm": "^0.44.2",
		"hono": "^4.8.2",
		"nanoid": "^5.1.5",
		"pg": "^8.16.3",
		"sharp": "^0.33.5",
		"zod": "^4.0.2"
	},
	"devDependencies": {
		"@types/bun": "^1.2.6",
		"@types/pg": "^8.15.5",
		"drizzle-kit": "^0.31.2",
		"tsdown": "^0.14.1",
		"typescript": "^5.8.2"
	}
}
